    "tags": [
        {
            "name": "admins",
            "description": "Secured Admin-only calls"
        },
        {
            "name": "developers",
            "description": "Operations available to regular developers"
        }
    ],
    "paths": {
        "/visitor": {
            "get": {
                "tags": [
                    "developers"
                ],
                "summary": "get count",
                "description": "get latest visitor count and last viewed date",
                "operationId": "getCount",
                "responses": {
                    "200": {
                        "description": "visitor count retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/visitor"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Visitor Count Not Found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "visitor": {
                "type": "object",
                "properties": {
                    "lastViewed": {
                        "type": "object",
                        "properties": {
                            "S": {
                                "type": "string",
                                "example": "12-31-2020T12:00:00Z"
                            }
                        }            
                    },
                    "count": {
                        "type": "object",
                        "properties": {
                            "N": {
                                "type": "string",
                                "example": "20"
                            }
                        }            
                    }
                }
            }
        }
    }
}